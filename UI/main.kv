#:kivy 2.1.0

<RootWidget> 
    canvas:
        Color:
            rgba : 40/255, 113/255, 199/255, 1
        
        Rectangle: 
            pos: 75, 100
            size: 7.5, 110
        
        Rectangle:
            pos: 790, 0
            size: 60, 250
    
    CycleLabel:
        id: c_label
    
    Button:
        pos: 800, 154
        size: 40, 40
        background_color: 0,0,0,0
        id: settings_button
        Image: 
            source: 'assets/cog.png'
            center_x: self.parent.center_x
            center_y: self.parent.center_y

    Button:
        pos: 800, 56
        size: 40, 40
        background_color: 0,0,0,0
        on_release: root.status_released()
        id: status_button
        Image:
            id: status_image
            source: 'assets/play.png'
            center_x: self.parent.center_x
            center_y: self.parent.center_y
    ProgressMeter:
        id: p_bar